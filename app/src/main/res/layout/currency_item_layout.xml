<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/currency_label_width"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/current_date_and_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="19:45"
        android:textSize="15dp"
        android:paddingLeft="207dip"
        android:paddingBottom="3dp"
        />
    <TextView
        android:id="@+id/tv_currency_logo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textAlignment="center"
        tools:text="USD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingTop="30dp">
        <LinearLayout
            android:id="@+id/btc_container"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:baselineAligned="true"

            android:background="@color/btcBackround">
            <TextView
                android:id="@+id/btc_section_view_label"
                style="@style/CurrencyItemLabel"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="1 BTC"/>
            <TextView
                android:id="@+id/btc_section_view_amount"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                style="@style/CurrencyItemAmount"
                tools:text="3381"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eth_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_below="@id/btc_container"
            android:background="@color/ethBackround"

            >
            <TextView
                android:id="@+id/eth_section_view_label"
                style="@style/CurrencyItemLabel"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="1 ETH"/>
            <TextView
                android:id="@+id/eth_section_view_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/CurrencyItemAmount"
                tools:text="3381"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/eth_container"
        android:lineSpacingExtra="-5dp"
        android:text="click to open converter" />


</android.support.v7.widget.CardView>