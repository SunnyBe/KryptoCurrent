<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- The theme to handle the Text that shows -->
    <style name="CurrencyItem.TextAppearance">
        <item name="android:textSize"> 10dp </item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- The theme to handle the CurrencyItem Image-->
    <style name="CurrencyItem.Icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CurrencyItem">
        <item name="android:padding">16dp</item>

    </style>

    <style name="converterTitleStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/ORANGEDARK</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ConverterItemStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/ORANGEDARK</item>
    </style>

</resources>
